@model List<CODE.Perfil>

<section id="main-content">
	<section class="content">
		<div class="panel">
			<header class="panel-heading">
				<h4>PERFIS</h4>
				<div class="top-nav">
					<button id="btnNovo" class="btn btn-primary" onclick="jsNovo();"><span aria-hidden="true" class="zmdi zmdi-file-plus"></span> &nbsp; NOVO</button>
				</div>
			</header>
			<div class="panel-body">
				<div class="table-responsive">
					<table id="data-table" class="table table-bordered table-striped">
						<thead class="thead-default">
							<tr>
								<th class="center">AÇÕES</th>
								<th class="center">CÓDIGO</th>
								<th class="center">DESCRIÇÃO</th>
							</tr>
						</thead>
						<tbody>
							@foreach (CODE.Perfil perfil in Model)
							{
								<tr>
									<td class="center">
										<a href="#" title="Editar" onclick="jsEditar(@Html.Raw(perfil.Codigo))"><span aria-hidden="true" class="zmdi zmdi-border-color"></span></a>
										&nbsp;
										<a href="#" title="Excluir" onclick="jsExcluir(@Html.Raw(perfil.Codigo))"><span aria-hidden="true" class="zmdi zmdi-delete"></span></a>
									</td>
									<td class="center">
										@perfil.Codigo
									</td>
									<td class="center">
										@perfil.Descricao
									</td>
								</tr>
							}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</section>
</section>

<script type="text/javascript">

	function jsEditar(codigoPerfil) {
		window.location.assign("@Url.Action("Edit", "Perfil")?codigoPerfil=" + codigoPerfil);
	}

	function jsExcluir(codigoPerfil) {
		window.location.assign("@Url.Action("Delete", "Perfil")?codigoPerfil=" + codigoPerfil);
	}

	function jsNovo() {
		window.location.assign("@Url.Action("Edit", "Perfil")");
	}

</script>