@model List<CODE.ContaBancaria>

<section id="main-content">
	<section class="content">
		<div class="panel">
			<header class="panel-heading">
				<h4 class="accordion-toggle" data-toggle="collapse" href="#divCollapseResultado" aria-expanded="false">CONTAS BANCÁRIAS</h4>
				<div class="top-nav">
					<button id="btnNovo" class="btn btn-primary" onclick="jsNovo();"><span aria-hidden="true" class="zmdi zmdi-file-plus"></span> &nbsp; NOVO</button>
				</div>
			</header>
			<div id="divCollapseResultado" class="panel-collapse collapse show">
				<div class="panel-body">
					<div class="table-responsive">
						<table id="data-table" class="table table-bordered table-striped">
							<thead class="thead-default">
								<tr>
									<th class="center">AÇÕES</th>
									<th class="center">CÓDIGO</th>
									<th class="center">DESCRIÇÃO</th>
								</tr>
							</thead>
							<tbody>
								@foreach (CODE.ContaBancaria conta in Model)
								{
									<tr>
										<td class="center">
											<a href="#" title="Editar" onclick="jsEditar(@Html.Raw(conta.Codigo))"><span aria-hidden="true" class="zmdi zmdi-border-color"></span></a>
											&nbsp;
											<a href="#" title="Excluir" onclick="jsExcluir(@Html.Raw(conta.Codigo))"><span aria-hidden="true" class="zmdi zmdi-delete"></span></a>
										</td>
										<td class="center">
											@conta.Codigo
										</td>
										<td class="center">
											@conta.Descricao
										</td>
									</tr>
								}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</section>
</section>
<script type="text/javascript">

	function jsEditar(codigoConta) {
		window.location.assign("@Url.Action("Edit", "ContaBancaria")?codigoConta=" + codigoConta);
	}

	function jsExcluir(codigoConta) {
		window.location.assign("@Url.Action("Delete", "ContaBancaria")?codigoConta=" + codigoConta);
	}

	function jsNovo() {
		window.location.assign("@Url.Action("Edit", "ContaBancaria")");
	}

</script>
