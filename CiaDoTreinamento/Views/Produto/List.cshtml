@model List<CODE.Produto.ProdutoTela>
<section id="main-content">
	<section class="content">
		<div class="panel">
			<header class="panel-heading">
				<h4>PRODUTOS</h4>
				<div class="top-nav">
					<button id="btnNovo" class="btn btn-primary" onclick="jsNovo();"><span aria-hidden="true" class="zmdi zmdi-file-plus"></span> &nbsp; NOVO</button>
				</div>
			</header>
			<div class="panel-body">
				<div class="table-responsive">
					<table id="data-table" class="table table-bordered table-striped">
						<thead class="thead-default">
							<tr>
								<th class="center">AÇÕES</th>
								<th class="center">CÓDIGO</th>
								<th class="center">DESCRIÇÃO</th>
								<th class="center">VALOR POR PESSOA</th>
								<th class="center">MESES DE VIGÊNCIA</th>
								<th class="center">CARGA HORÁRIA</th>
								<th class="center">ATIVO</th>
							</tr>
						</thead>
						<tbody>
							@foreach (CODE.Produto.ProdutoTela produto in Model)
{
								<tr>
									<td class="center">
										<a href="#" title="Editar" onclick="jsEditar(@Html.Raw(produto.Codigo))"><span aria-hidden="true" class="zmdi zmdi-border-color"></span></a>
									</td>
									<td class="center">
										@produto.Codigo
									</td>
									<td class="center">
										@produto.Descricao
									</td>
									<td class="center">
										@produto.ValorPorPessoa
									</td>
									<td class="center">
										@produto.MesesVigencia 
									</td>
									<td class="center">
										@produto.CargaHoraria
									</td>
									<td class="center">
										@(produto.Ativo ? "Sim" : "Não")
									</td>
								</tr>
							}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</section>
</section>

<script type="text/javascript">

	function jsEditar(codigoProduto) {
		window.location.assign("@Url.Action("Edit", "Produto")?codigoProduto=" + codigoProduto);
	}

	function jsNovo() {
		window.location.assign("@Url.Action("Edit", "Produto")");
	}

</script>