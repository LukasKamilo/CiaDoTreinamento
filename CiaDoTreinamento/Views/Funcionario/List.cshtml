@model List<CODE.Funcionario>

<section id="main-content">
	<section class="content">
		<div class="panel">
			<header class="panel-heading">
				<h4 class="accordion-toggle" data-toggle="collapse" href="#divCollapseResultado" aria-expanded="false">FUNCIONÁRIOS</h4>
				<div class="top-nav">
					<button id="btnNovo" class="btn btn-primary" onclick="jsNovo();"><span aria-hidden="true" class="zmdi zmdi-file-plus"></span> &nbsp; NOVO</button>
				</div>
			</header>
			<div id="divCollapseResultado" class="panel-collapse collapse show">
				<div class="panel-body">
					<div class="table-responsive">
						<table id="data-table" class="table table-bordered table-striped">
							<thead class="thead-default">
								<tr>
									<th class="center">AÇÕES</th>
									<th class="center">CÓDIGO</th>
									<th class="center">NOME</th>
									<th class="center">ATIVO</th>
								</tr>
							</thead>
							<tbody>
								@foreach (CODE.Funcionario funcionario in Model)
								{
									<tr>
										<td class="center">
											<a href="#" title="Editar" onclick="jsEditar(@Html.Raw(funcionario.Codigo))"><span aria-hidden="true" class="zmdi zmdi-border-color"></span></a>
											&nbsp;
											<a href="#" title="Excluir" onclick="jsExcluir(@Html.Raw(funcionario.Codigo))"><span aria-hidden="true" class="zmdi zmdi-delete"></span></a>
										</td>
										<td class="center">
											@funcionario.Codigo
										</td>
										<td class="center">
											@funcionario.Nome
										</td>
										<td class="center">
											@(funcionario.Ativo ? "Sim" : "Não")
										</td>
									</tr>
								}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</section>
</section>
<script type="text/javascript">

	function jsEditar(codigoFuncionario) {
		window.location.assign("@Url.Action("Edit", "Funcionario")?codigoFuncionario=" + codigoFuncionario);
	}

	function jsExcluir(codigoFuncionario) {
		window.location.assign("@Url.Action("Delete", "Funcionario")?codigoFuncionario=" + codigoFuncionario);
	}

	function jsNovo() {
		window.location.assign("@Url.Action("Edit", "Funcionario")");
	}

</script>
